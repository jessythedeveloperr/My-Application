<!-- activity_main.xml --xml -->

<LinearLayout
        xmlns:andriod="http://schemas,andriod.com/apk/res/andriod"
        xmlns:tools="http://schemas.andriod.com/tools"
        andriod:layout_width="match_parent"
        andriod:layout_height="match_parent"
        andriod:orientation="vertical">

    <TextView
            andriod:id="@+id/scoreText"
            andriod:layout_width="wrap_content"
            andriod:layout_height="wrap_content"
            andriod:text="Score: 0"
            andriod:textSize="20sp"
            andriod:textStyle="bold"
            andriod:layout_gravity="center"
            andriod:padding-"16dp"/>
    <Button
            andriod:id="@+id/cup1"
            andriod:layout_width="wrap_content"
            andriod:layout_height="wrap_content"
            andriod:text="Cup 1"
            andriod:layout_gravity="center"
            andriod:padding="16dp/">

        <Button
                andriod:id="@+id/cup2"
                andriod:layout_width="wrap_content"
                andriod:layout_height="wrap_content"
                andriod:text="Cup 2"
                andriod:layout_gravity="center"
                andriod:padding="16dp/">

            <Button
                    andriod:id="@+id/cup3"
                    andriod:layout_width="wrap_content"
                    andriod:layout_height="wrap_content"
                    andriod:text="Cup 3"
                    andriod:layout_gravity="center"
                    andriod:padding="16dp/">

            <Button
                    andriod:id="@+id/restartButton"
                    andriod:layout_width="wrap_content"
                    andriod:layout_height="wrap_content"
                    andriod:text="Restart"
                    andriod:layout_gravity="center"
                    andriod:padding="16dp/">

                <TextView
                        andriod:id="@+id/scoreText"
                        andriod:layout_width="wrap_content"
                        andriod:layout_height="wrap_content"
                        andriod:text="Score: 0"
                        andriod:textSize="20sp"
                        andriod:textStyle="bold"
                        andriod:layout_gravity="center"
                        andriod:padding-"16dp"/>

</LinearLayout>